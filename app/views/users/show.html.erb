<div class="row mt-4">
    <div class="col-4">
        <div class="card">
            <div class="card-header">
                User Information
            </div>
            <div class="card-body text-center">
                <%= gravatar_for(@user, "profile-medium")%>
                <h5 class="mt-2"><%= @user.name %></h5>
                <p><%= @user.email %></p>
            </div>
        </div>
    </div>
    <div class="col-8">
        <div class="card">
            <div class="card-header">
                Activity Feed (<%= @user.microposts.count %>)
            </div>
            <div class="card-body">
                <% if @user.microposts.any? %>
                    
                <% end %>
            </div>
        </div>
    </div>
</div>